{{ define "home/index.tmpl" }}
  <html>
    {{  template "layouts/header.tmpl" . }}
    <body class="ui text container" style="background: #eee;">
      {{ template "layouts/menu.tmpl" .}}
      <div style="padding: 15px;margin-top: 30px;background: #fff;">
        {{ range .articles }}
          <div class="article" style="overflow: hidden;height: 40px;line-height: 40px;">
            <span style="float: left;font-size: 14px;"><a style="color: #000;font-size:14px;" href="/articles/{{.ID}}">{{ .Title }}</a></span>
            <span style="float: right;font-size: 12px;color: #888;"><i class="clock icon"></i>{{ datetimeFormat .CreatedAt "2006-01-02" }}</span>
          </div>
        {{end}}

        {{ template "layouts/footer.tmpl" .}}
      </div>
    </body>
  </html>
{{ end }}
